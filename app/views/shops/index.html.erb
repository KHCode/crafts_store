<div class="container mt-4">
  <h1>Arts & Crafts Shops</h1>
  
  <div class="row row-cols-1 row-cols-md-3 g-4 mt-3">
    <% @shops.each do |shop| %>
      <div class="col">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title"><%= shop.name %></h5>
            <p class="card-text"><%= truncate(shop.description, length: 150) %></p>
            <p class="card-text"><small class="text-muted">Owned by <%= shop.user.full_name %></small></p>
            <%= link_to 'View Shop', shop, class: 'btn btn-sm btn-outline-primary' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  
  <% if user_signed_in? && !current_user.shop.present? %>
    <div class="mt-4">
      <%= link_to 'Open Your Crafts Shop', new_shop_path, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
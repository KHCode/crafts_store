<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Categories</h1>
    <%= link_to "Add New Category", new_category_path, class: "btn btn-success" %>
  </div>
  
  <% if @categories.any? %>
    <div class="card">
      <div class="card-body">
        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Product Count</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= category.name %></td>
                <td><%= category.products.count %></td>
                <td>
                  <div class="btn-group btn-group-sm">
                    <%= link_to "Edit", edit_category_path(category), class: "btn btn-outline-primary" %>
                    <%= link_to "Delete", category_path(category), 
                        method: :delete, 
                        data: { confirm: "Are you sure you want to delete this category?" }, 
                        class: "btn btn-outline-danger #{'disabled' if category.products.any?}" %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% else %>
    <div class="alert alert-info">
      No categories have been created yet.
    </div>
  <% end %>
  
  <div class="mt-4">
    <%= link_to "Back to Products", products_path, class: "btn btn-outline-secondary" %>
  </div>
</div>